<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" packages="fr.fidtec.appenders">
    
    <Appenders>
        <MyCustomAppender name="myCustomAppender" >
       		<PatternLayout pattern="serial no: %sn | Date: %d | level:%level | class name:%logger | method name:%M() | line number:%L | Location: %l | message:%m %n" />
        </MyCustomAppender>
    </Appenders>
    
    <Loggers>
    	<Root level="all" additivity="false">
        	<AppenderRef ref="myapp" />
        </Root>
    </Loggers>
</Configuration>